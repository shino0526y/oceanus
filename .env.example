POSTGRES_DB=oceanus
POSTGRES_USER=oceanus
POSTGRES_PASSWORD=oceanus

# DICOM AE タイトル
AE_TITLE=OCEANUS

# DICOM サーバー設定
DICOM_PORT=104
HOME_DIR=/app
STORAGE_DIR=/var/lib/oceanus/dicom

# データベース接続 URL
# 形式: postgres://user:password@host:port/dbname
DATABASE_URL=postgres://oceanus:oceanus@db:5432/oceanus

# dicom-server 用データベース接続 URL
# dicom-server は network_mode: host で動作するため、接続先が localhost になる
DICOM_SERVER_DATABASE_URL=postgres://oceanus:oceanus@localhost:5432/oceanus
